{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

<!--NOTE(eugenek): This is the center content of the website -->
<div id="content-main">
    {{#foreach posts}}
    <article class="{{post_class}}">
        <header class="post-header">
            <h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>
            <span class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM D, YYYY"}}</time> | {{author}}{{#if tags}} | Tags: {{tags}}{{/if}}</span>

        </header>
        <section class="post-content">
            <p>{{content}}</p>
        </section>
    </article>
    {{/foreach}}

    {{pagination}}
</div>
